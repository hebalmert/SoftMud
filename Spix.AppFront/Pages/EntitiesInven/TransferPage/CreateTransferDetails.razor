@page "/transfers/createTransDatails/{Id:guid}"
@attribute [Authorize(Roles = "Usuario")]

@if (TransferDetails is null)
{
    <Loading />
}
else
{
    ﻿<MudDialog>
        <DialogContent>
            <div class="container" style="width:300px">
                <FormTransferDetails @ref=FormTransferDetails
                              TransferDetails="TransferDetails"
                              IsEditControl=false
                              OnSubmit="Create"
                              ReturnAction="Return" />
            </div>
        </DialogContent>
    </MudDialog>
}