@page "/cargues/details/{Id:guid}"
@attribute [Authorize(Roles = "Usuario")]

<MudCardContent>
    <div class="shadow-lg mb-5">
        <MudCard Outlined="true">
            <MudCardContent>
                @if (Cargue is null)
                {
                    <Loading />
                }
                else
                {
                    <h3>Detalle de Tranferencia</h3>

                    <div class="col-sm-12">
                        <div class="row align-items-center">
                            <!-- Columna para el botón -->
                            <div class="col-md-6 d-flex justify-content-start">
                                <MudGrid Style="max-width: 100%;">
                                    <MudItem xs="12">
                                        <MudPaper Class="p-3">
                                            <MudSimpleTable>
                                                <tr>
                                                    <td style="font-size: 1.2rem;"><strong>Producto:</strong></td>
                                                    <td style="font-size: 1.2rem;" class="text-end">@Cargue.Product!.ProductName</td>
                                                </tr>
                                                <tr>
                                                    <td style="font-size: 1.2rem;"><strong>Fecha:</strong></td>
                                                    <td style="font-size: 1.2rem;" class="text-end">@Cargue.DateCargue.ToString("dd/MM/yyyy")</td>
                                                </tr>
                                                <tr>
                                                    <td style="font-size: 1.2rem;"><strong>Control:</strong></td>
                                                    <td style="font-size: 1.2rem;" class="text-end">@Cargue.ControlCargue</td>
                                                </tr>
                                                <tr>
                                                    <td style="font-size: 1.2rem;"><strong>Factura#:</strong></td>
                                                    <td style="font-size: 1.2rem;" class="text-end">@Cargue.Purchase!.NroFactura</td>
                                                </tr>
                                            </MudSimpleTable>
                                        </MudPaper>
                                    </MudItem>
                                </MudGrid>
                            </div>
                            <!-- Columna para el filtro -->
                            <div class="col-md-6 d-flex justify-content-end">
                            </div>
                        </div>
                        <br />
                    </div>
                    <div class="col-sm-12">
                        <div class="row align-items-center">
                            <!-- Columna para el botón -->
                            <div class="col-md-9 d-flex justify-content-start">
                                <div>
                                    <MudButton Variant="Variant.Filled"
                                               EndIcon="@Icons.Material.Filled.ArrowBack"
                                               Color="Color.Surface" style="width:150px"
                                               Href="@($"/cargues")">
                                        Volver
                                    </MudButton>
                                </div>
                                <div style="padding-left:4px">
                                    @if (Cargue.Status == CargueType.Pendiente)
                                    { 
                                        if(Cargue.TotalSeriales != Cargue.CantToUp)
                                        {
                                            <MudButton Variant="Variant.Filled"
                                            EndIcon="@Icons.Material.Filled.AddBox"
                                            Color="Color.Dark" style="width:150px"
                                            OnClick="@(()=> ShowModalAsync())">
                                                Nuevo
                                            </MudButton>
                                        }
                                    }
                                </div>
                                <div style="padding-left:4px">
                                    @if (Cargue.Status == CargueType.Pendiente)
                                    {
                                        <MudButton Variant="Variant.Filled"
                                                   EndIcon="@Icons.Material.Filled.AddBox"
                                                   Color="Color.Success" style="width:150px"
                                                   OnClick="@(()=> CloseCargueAsync(Cargue.CargueId))">
                                            Cerrar
                                        </MudButton>
                                    }
                                </div>
                            </div>
                            <!-- Columna para el filtro -->
                            <div class="col-md-3 d-flex justify-content-end">
                            </div>
                        </div>
                        <br />
                    </div>
                }
                <hr style="height:2px;border:none;color:#333;background-color:#333;" />
                <div class="row">
                    <div class="col-md-12 table-responsive">
                        @if (CargueDetails is null)
                        {
                            <Loading />
                        }
                        else
                        {
                            <GenericList MyList="CargueDetails">
                                <Body>
                                    <MudSimpleTable Dense="true" Hover="true" Striped="true" Style="overflow-x: auto;">
                                        <thead>
                                            <tr>
                                                <th>Mac</th>
                                                <th>Comentario</th>
                                                <th>Estatus</th>
                                                <th></th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in CargueDetails!)
                                            {
                                                <tr>
                                                    <td>
                                                        @item.MacWlan
                                                    </td>
                                                    <td>
                                                        @item.Comment
                                                    </td>
                                                    <td>
                                                    @switch (item.Status.ToString())
                                                    {
                                                        case "Disponible":
                                                            <strong style="color : orangered">@item.Status</strong>
                                                            break;
                                                        case "Averiado":
                                                            <strong style="color : red">@item.Status</strong>
                                                            break;
                                                        case "Operativo":
                                                            <strong style="color : forestgreen">@item.Status</strong>
                                                            break;
                                                    }
                                                    </td>
                                                    <td style="width:1px; padding-left:1px; padding-right:4px;">
                                                        @if (Cargue!.Status == CargueType.Pendiente)
                                                        {
                                                            <MudFab Size="Size.Small"
                                                                    EndIcon="@Icons.Material.Filled.Edit"
                                                                    Color="Color.Dark"
                                                                    OnClick="@(()=> ShowModalAsync(item.CargueDetailId, true))">
                                                            </MudFab>
                                                        }
                                                    </td>
                                                    <td style="width:1px; padding-left:1px; padding-right:4px;">
                                                        @if (Cargue!.Status == CargueType.Pendiente)
                                                        {
                                                            <MudFab Size="Size.Small"
                                                                    EndIcon="@Icons.Material.Filled.Delete"
                                                                    Color="Color.Error"
                                                                    OnClick="@(()=> DeleteAsync(item.CargueDetailId))">
                                                            </MudFab>
                                                        }
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </MudSimpleTable>
                                </Body>
                            </GenericList>
                        }

                    </div>
                </div>
                <hr style="height:2px;border:none;color:#333;background-color:#333;" />
                @if (CargueDetails is null)
                {
                    <Loading />
                }
                else
                {
                    <Pagination CurrentPage="CurrentPage"
                                SelectedPage="SelectedPage"
                                TotalPages="TotalPages">
                    </Pagination>
                }
            </MudCardContent>
        </MudCard>
    </div>
</MudCardContent>