<EditForm Model="Supplier" OnValidSubmit="OnSubmit">
    <DataAnnotationsValidator />

    <MudGrid>
        <MudItem xs="12">
            <MudTextField Label="@GetDisplayName(() => Supplier.Name)"
                          @bind-Value="@Supplier.Name"
                          For="@(() => Supplier.Name)"
                          Class="mb-4" Style="flex: 1;" />
            <MudTextField Label="@GetDisplayName(() => Supplier.ContactName)"
                          @bind-Value="@Supplier.ContactName"
                          For="@(() => Supplier.ContactName)"
                          Class="mb-4" Style="flex: 1;" />
        </MudItem>
        <MudItem xs="6">
            <!-- Contenedor para unir Document y DocumentType -->
            <div style="display: flex; gap: 10px; align-items: center;">
                <MudTextField Label="@GetDisplayName(() => Supplier.Document)"
                              @bind-Value="@Supplier.Document"
                              For="@(() => Supplier.Document)"
                              Class="mb-4" Style="flex: 1;" />

                @if (DocumentTypes is null)
                {
                    <Loading />
                }
                else
                {
                    <MudSelect T="DocumentType" Class="mb-4"
                               Label="Tipo"
                               Value="SelectedDocument"
                               ValueChanged="DocumentChanged"
                               ToStringFunc="@(e => e == null ? null : $"{e.DocumentName}")"
                               For="@(() => Supplier.DocumentType)"
                               Style="flex: 1;">
                        @foreach (var item in DocumentTypes!)
                        {
                            <MudSelectItem Value="item">@item.DocumentName</MudSelectItem>
                        }
                    </MudSelect>
                }
            </div>
        </MudItem>
        <MudItem xs="6">
            <!-- Contenedor para unir Document y DocumentType -->
            <div style="display: flex; gap: 10px; align-items: center;">
                <MudTextField Label="País"
                              @bind-Value="@Supplier.CodeCountry"
                              For="@(() => Supplier.CodeCountry)"
                              Class="mb-4"
                              Style="flex: 1;"/>

                <MudTextField Label="Área"
                              @bind-Value="@Supplier.CodeNumber"
                              For="@(() => Supplier.CodeNumber)"
                              Class="mb-4"
                              Style="flex: 1;"/>

                <MudTextField Label="Teléfono"
                              @bind-Value="@Supplier.PhoneNumber"
                              For="@(() => Supplier.PhoneNumber)"
                              Class="mb-4"
                              Style="flex: 2;"/>
            </div>
        </MudItem>
        <MudItem xs="12">
            <MudTextField Label="@GetDisplayName(() => Supplier.Address)"
                          @bind-Value="@Supplier.Address"
                          For="@(() => Supplier.Address)"
                          Class="mb-4" />
        </MudItem>
        <MudItem xs="6">
            @if (States is null)
            {
                <Loading />
            }
            else
            {
                <MudSelect T="State" Class="mb-4"
                           Label="--- Estado/Departamento ---"
                           Value="SelectedSate"
                           ValueChanged="StateChanged"
                           ToStringFunc="@(e=> e==null?null : $"{e.Name}")">
                    @foreach (var item in States!)
                    {
                        <MudSelectItem Value="item">@item.Name</MudSelectItem>
                    }
                </MudSelect>
            }
        </MudItem>
        <MudItem xs="6">

            @if (Cities is null)
            {
                <Loading />
            }
            else
            {
                <MudSelect T="City" Class="mb-4"
                           Label="--- Ciudad ---"
                           Value="SelectedCity"
                           ValueChanged="CityChanged"
                           ToStringFunc="@(e=> e==null?null : $"{e.Name}")">
                    @foreach (var item in Cities!)
                    {
                        <MudSelectItem Value="item">@item.Name</MudSelectItem>
                    }
                </MudSelect>
            }

        </MudItem>
        <MudItem xs="6">
            <MudTextField Label="@GetDisplayName(() => Supplier.UserName)"
                          @bind-Value="@Supplier.UserName"
                          For="@(() => Supplier.UserName)"
                          Class="mb-4" />
        </MudItem>
        <MudItem xs="6">
            <MudCheckBox Label="@GetDisplayName(() => Supplier.Active)"
                         @bind-Value="@Supplier.Active"
                         For="@(() => Supplier.Active)"
                         Class="mb-4" />
        </MudItem>
        <MudItem xs="12" Class="align-content-center">
            <InputImage ImageSelected="ImageSelected" ImageUrl="@ImageUrl" />
        </MudItem>

    </MudGrid>

    <br />
    <div class="mb-4" style="display: flex; justify-content: center; gap: 10px; margin-top: 10px;">
        <MudButton Variant="Variant.Filled"
                   StartIcon="@Icons.Material.Filled.ArrowBack"
                   Color="Color.Surface"
                   OnClick="ReturnAction">
            Volver
        </MudButton>
        <MudButton Variant="Variant.Filled"
                   StartIcon="@Icons.Material.Filled.Save"
                   Color="Color.Dark"
                   ButtonType="ButtonType.Submit">
            Guardar
        </MudButton>
    </div>
</EditForm>
