@page "/suppliers/create"
@attribute [Authorize(Roles = "Usuario")]

@if (Supplier is null)
{
    <Loading />
}
else
{
    <MudDialog>
        <DialogContent>
            <FormSupplier Supplier="Supplier"
                             IsEditControl="false"
                             OnSubmit="Create"
                             ReturnAction="Return" />
        </DialogContent>
    </MudDialog>
}