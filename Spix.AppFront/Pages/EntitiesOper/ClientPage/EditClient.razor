@page "/clients/edit/{Id:guid}"
@attribute [Authorize(Roles = "Usuario")]

@if (Client is null)
{
    <Loading />
}
else
{
    <MudDialog>
        <DialogContent>
            <FormClient Client="Client"
                             IsEditControl="true"
                             OnSubmit="Edit"
                             ReturnAction="Return" />
        </DialogContent>
    </MudDialog>
}

