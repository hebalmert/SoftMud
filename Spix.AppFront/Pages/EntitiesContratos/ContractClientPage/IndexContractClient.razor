@page "/contractclients"
@attribute [Authorize(Roles = "Usuario")]

<MudCardContent>
    <div class="shadow-lg mb-5">
        <MudCard Outlined="true">
            <MudCardContent>
                <h3>Contrato Clientes</h3>

                <div class="col-sm-12">
                    <div class="row align-items-center">
                        <!-- Columna para el botón -->
                        <div class="col-md-3 d-flex justify-content-start">
                            <MudButton Variant="Variant.Filled"
                                       EndIcon="@Icons.Material.Filled.AddCircle"
                                       Color="Color.Dark" style="width:130px"
                                       OnClick="@(()=> ShowModalAsync())">
                                Nuevo
                            </MudButton>
                        </div>
                        <!-- Columna para el filtro -->
                        <div class="col-md-9 d-flex justify-content-end">
                            <FilterComponent ApplyFilter="SetFilterValue" />
                        </div>
                    </div>
                    <br />
                </div>
                <hr style="height:2px;border:none;color:#333;background-color:#333;" />
                <div class="row">
                    <div class="col-md-12 table-responsive">
                        <GenericList MyList="ContractClients">
                            <Body>
                                <MudSimpleTable Dense="true" Hover="true" Striped="true" Style="overflow-x: auto;">
                                    <thead>
                                        <tr>
                                            <th>Contrato</th>
                                            <th>Nombre</th>
                                            <th>Zona</th>
                                            <th>Estatus</th>
                                            <th></th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in ContractClients!)
                                        {
                                            <tr>
                                                <td>
                                                    @item.ControlContrato
                                                </td>
                                                <td>
                                                    @item.Client!.FullName
                                                </td>
                                                <td>
                                                    @item.Zone!.ZoneName
                                                </td>
                                                <td>
                                                    @switch (item.StateType.ToString())
                                                    {
                                                        case "Creando":
                                                            <strong style="color : darkorange">@item.StateType</strong>
                                                            break;
                                                        case "Procesando":
                                                            <strong style="color : orangered">@item.StateType</strong>
                                                            break;

                                                        case "Activo":
                                                            <strong style="color : forestgreen">@item.StateType</strong>
                                                            break;

                                                        case "Anulado":
                                                            <strong style="color : orangered ">@item.StateType</strong>
                                                            break;
                                                        case "Retirado":
                                                            <strong style="color : red">@item.StateType</strong>
                                                            break;
                                                        case "Suspendido":
                                                            <strong style="color : red">@item.StateType</strong>
                                                            break;
                                                        case "Exonerado":
                                                            <strong style="color : royalblue">@item.StateType</strong>
                                                            break;
                                                    }
                                                </td>
                                                <td>
                                                    @*   <MudCheckBox @bind-Value="@item.Active" ReadOnly="true"></MudCheckBox> *@
                                                </td>
                                                <td style="width:1px; padding-left:1px; padding-right:4px;">
                                                    <MudFab Size="Size.Small"
                                                            EndIcon="@Icons.Material.Filled.Edit"
                                                            Color="Color.Dark"
                                                            OnClick="@(()=> ShowModalAsync(item.ContractClientId, true))">
                                                    </MudFab>
                                                </td>
                                                <td style="width:1px; padding-left:1px; padding-right:4px;">
                                                    @if (item.StateType == StateType.Creando)
                                                    {
                                                        <MudFab Size="Size.Small"
                                                                EndIcon="@Icons.Material.Filled.Delete"
                                                                Color="Color.Error"
                                                                OnClick="@(()=> DeleteAsync(item.ContractClientId))">
                                                        </MudFab>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </MudSimpleTable>
                            </Body>
                        </GenericList>
                    </div>
                </div>
                <hr style="height:2px;border:none;color:#333;background-color:#333;" />
                <Pagination CurrentPage="CurrentPage"
                            SelectedPage="SelectedPage"
                            TotalPages="TotalPages">
                </Pagination>
            </MudCardContent>
        </MudCard>
    </div>
</MudCardContent>

