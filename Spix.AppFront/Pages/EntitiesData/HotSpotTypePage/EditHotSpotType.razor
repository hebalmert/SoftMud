@page "/hotspots/edit/{Id:int}"
@attribute [Authorize(Roles = "Admin")]

@if (HotSpotType is null)
{
    <Loading />
}
else
{
    <MudDialog>
        <DialogContent>
            <FormHotSpotType HotSpotType="HotSpotType"
                          OnSubmit="Edit"
                          ReturnAction="Return" />
        </DialogContent>
    </MudDialog>
}


