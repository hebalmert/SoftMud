@page "/suppliers/edit/{Id:guid}"
@attribute [Authorize(Roles = "Usuario")]

@if (Supplier is null)
{
    <Loading />
}
else
{
    <MudDialog>
        <DialogContent>
            <FormSupplier Supplier="Supplier"
                             IsEditControl="true"
                             OnSubmit="Edit"
                             ReturnAction="Return" />
        </DialogContent>
    </MudDialog>
}

