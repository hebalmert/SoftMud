<EditForm Model="ProductStorage" OnValidSubmit="OnSubmit">
    <DataAnnotationsValidator />
    <MudGrid>
        <MudItem xs="12">
            <MudTextField Label="@GetDisplayName(() => ProductStorage.StorageName)"
                          @bind-Value="@ProductStorage.StorageName"
                          For="@(() => ProductStorage.StorageName)"
                          Class="mb-4" />
        </MudItem>
        <MudItem xs="6">
            @if (States is null)
            {
                <Loading />
            }
            else
            {
                <MudSelect T="State" Class="mb-4"
                           Label="--- Estado/Departamento ---"
                           Value="SelectedSate"
                           ValueChanged="StateChanged"
                           ToStringFunc="@(e=> e==null?null : $"{e.Name}")">
                    @foreach (var item in States!)
                    {
                        <MudSelectItem Value="item">@item.Name</MudSelectItem>
                    }
                </MudSelect>
            }
        </MudItem>
        <MudItem xs="6">

            @if (Cities is null)
            {
                <Loading />
            }
            else
            {
                <MudSelect T="City" Class="mb-4"
                           Label="--- Ciudad ---"
                           Value="SelectedCity"
                           ValueChanged="CityChanged"
                           ToStringFunc="@(e=> e==null?null : $"{e.Name}")">
                    @foreach (var item in Cities!)
                    {
                        <MudSelectItem Value="item">@item.Name</MudSelectItem>
                    }
                </MudSelect>
            }

        </MudItem>
        <MudItem xs="6">
            <MudCheckBox Label="@GetDisplayName(() => ProductStorage.Active)"
                         @bind-Value="@ProductStorage.Active"
                         For="@(() => ProductStorage.Active)"
                         Class="mb-4" />
        </MudItem>
        <MudItem xs="6">

        </MudItem>
    </MudGrid>


    <br />
    <div class="mb-4" style="display: flex; justify-content: center; gap: 10px; margin-top: 10px;">
        <MudButton Variant="Variant.Filled"
                   StartIcon="@Icons.Material.Filled.ArrowBack"
                   Color="Color.Surface"
                   OnClick="ReturnAction">
            Volver
        </MudButton>
        <MudButton Variant="Variant.Filled"
                   StartIcon="@Icons.Material.Filled.Save"
                   Color="Color.Dark"
                   ButtonType="ButtonType.Submit">
            Guardar
        </MudButton>
    </div>
</EditForm>
