<EditForm Model="IpNet" OnValidSubmit="OnSubmit">
    <DataAnnotationsValidator />
    <MudTextField Label="@GetDisplayName(() => IpNet.Ip)"
                  @bind-Value="@IpNet.Ip"
                  For="@(() => IpNet.Ip)"
                  Class="mb-4" />
    <MudTextField Label="@GetDisplayName(() => IpNet.Description)"
                  @bind-Value="@IpNet.Description"
                  For="@(() => IpNet.Description)"
                  Class="mb-4" />
    <MudCheckBox Label="@GetDisplayName(() => IpNet.Active)"
                 @bind-Value="@IpNet.Active"
                 For="@(() => IpNet.Active)"
                 Class="mb-4" />
    <MudCheckBox Label="@GetDisplayName(() => IpNet.Assigned)"
                 @bind-Value="@IpNet.Assigned"
                 For="@(() => IpNet.Assigned)"
                 Class="mb-4" />
    <MudCheckBox Label="@GetDisplayName(() => IpNet.Excluded)"
                 @bind-Value="@IpNet.Excluded"
                 For="@(() => IpNet.Excluded)"
                 Class="mb-4" />
    <br />
    <div class="mb-4" style="display: flex; justify-content: center; gap: 10px; margin-top: 10px;">
        <MudButton Variant="Variant.Filled"
                   StartIcon="@Icons.Material.Filled.ArrowBack"
                   Color="Color.Surface"
                   OnClick="ReturnAction">
            Volver
        </MudButton>
        <MudButton Variant="Variant.Filled"
                   StartIcon="@Icons.Material.Filled.Save"
                   Color="Color.Dark"
                   ButtonType="ButtonType.Submit">
            Guardar
        </MudButton>
    </div>
</EditForm>
