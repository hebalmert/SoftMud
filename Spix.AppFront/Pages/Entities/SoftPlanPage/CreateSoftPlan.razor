@page "/softplans/create"
@attribute [Authorize(Roles = "Admin")]

@if (_softplan is null)
{
    <Loading />
}
else
{
    <MudDialog>
        <DialogContent>
            <FormSoftPlan SoftPlan="_softplan"
                          OnSubmit="Create"
                          ReturnAction="Return" />
        </DialogContent>
    </MudDialog>
}
