@page "/softplans/edit/{Id:int}"
@attribute [Authorize(Roles = "Admin")]

@if (_softplan is null)
{
    <Loading />
}
else
{
    <MudDialog>
        <DialogContent>
            <FormSoftPlan SoftPlan="_softplan"
                          OnSubmit="Edit"
                          ReturnAction="Return" />
        </DialogContent>
    </MudDialog>
}

